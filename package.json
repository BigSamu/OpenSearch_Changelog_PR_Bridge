{
  "name": "opensearch-bot",
  "private": true,
  "version": "0.0.1",
  "description": "A GitHub App that generates changeset files from OpenSearch PR descriptions",
  "main": "src/main.js",
  "type": "module",
  "engines": {
    "node": ">=18.x"
  },
  "scripts": {
    "dev": "node src/main.js",
    "test": "(jest && make-coverage-badge --output-path ./badges/coverage.svg) || make-coverage-badge --output-path ./badges/coverage.svg"
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@octokit/webhooks": "^12.0.10",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "octokit": "^3.1.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.6",
    "@babel/node": "^7.22.19",
    "@babel/preset-env": "^7.23.6",
    "@types/jest": "^29.5.10",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0"
  }
}
